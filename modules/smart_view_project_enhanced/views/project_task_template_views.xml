    <!-- Task Template Action -->
    <record id="action_task_template" model="ir.actions.act_window">
        <field name="name">Task Templates</field>
        <field name="res_model">project.task.template</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first task template
            </p>
            <p>
                Task templates are used to automatically generate standard tasks 
                when creating new projects.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_task_template"
              name="Task Templates"
              parent="project.menu_project_config"
              action="action_task_template"
              sequence="25"/>

