<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Task Template Form View -->
    <record id="view_task_template_form" model="ir.ui.view">
        <field name="name">project.task.template.form</field>
        <field name="model">project.task.template</field>
        <field name="arch" type="xml">
            <form string="Task Template">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Future: Add stat buttons -->
                    </div>
                    <widget name="web_ribbon" title="Inactive" bg_color="bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="template_code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="priority" widget="priority"/>
                            <field name="planned_hours" widget="float_time"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="stage_id"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" 
                                   widget="html" 
                                   placeholder="Task description..."/>
                        </page>
                        <page string="Notes">
                            <field name="notes" 
                                   placeholder="Internal notes about this template..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Task Template List View -->
    <record id="view_task_template_tree" model="ir.ui.view">
        <field name="name">project.task.template.list</field>
        <field name="model">project.task.template</field>
        <field name="arch" type="xml">
            <list string="Task Templates" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="template_code"/>
                <field name="priority" widget="priority"/>
                <field name="planned_hours" widget="float_time"/>
                <field name="user_id" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Task Template Kanban View -->
    <record id="view_task_template_kanban" model="ir.ui.view">
        <field name="name">project.task.template.kanban</field>
        <field name="model">project.task.template</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="template_code"/>
                <field name="priority"/>
                <field name="planned_hours"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <field name="name" class="fw-bold"/>
                        <div>
                            <t t-if="record.template_code.raw_value">
                                <span class="text-muted"><t t-esc="record.template_code.value"/></span>
                            </t>
                        </div>
                        <div>
                            <field name="priority" widget="priority"/>
                            <t t-if="record.planned_hours.raw_value">
                                <span class="text-muted ms-2">
                                    <i class="fa fa-clock-o"/> <field name="planned_hours" widget="float_time"/>h
                                </span>
                            </t>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

