<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Project Task Form View Enhancement -->
    <record id="view_task_form_enhanced" model="ir.ui.view">
        <field name="name">project.task.form.enhanced</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            
            <!-- Add template badge -->
            <xpath expr="//sheet" position="before">
                <widget name="web_ribbon" 
                        title="From Template" 
                        bg_color="bg-info"
                        invisible="not is_template_task"/>
            </xpath>

            <!-- Add template info -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="template_id" 
                       readonly="1" 
                       invisible="not template_id"/>
                <field name="is_template_task" invisible="1"/>
            </xpath>

        </field>
    </record>

