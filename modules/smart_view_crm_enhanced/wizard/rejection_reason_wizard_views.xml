<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Rejection Reason Wizard Form -->
    <record id="view_crm_lead_rejection_wizard_form" model="ir.ui.view">
        <field name="name">crm.lead.rejection.wizard.form</field>
        <field name="model">crm.lead.rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Client Rejection">
                <group>
                    <field name="lead_id" invisible="1"/>
                    
                    <group>
                        <field name="rejection_category" widget="radio"/>
                    </group>
                    
                    <group>
                        <field name="rejection_reason" 
                               placeholder="Please provide detailed reason for rejection..."
                               nolabel="1"/>
                    </group>
                    
                    <group>
                        <field name="notify_team"/>
                    </group>
                </group>
                
                <footer>
                    <button string="Confirm Rejection" 
                            name="action_confirm_rejection" 
                            type="object" 
                            class="btn-danger"/>
                    <button string="Cancel" 
                            name="action_cancel" 
                            type="object" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

