<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_form_inherit_header_footer" model="ir.ui.view">
            <field name="name">res.company.form.inherit.header.footer</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Report Header &amp; Footer" name="report_header_footer">
                        <group>
                            <group>
                                <field name="use_custom_header"/>
                                <field name="use_custom_footer"/>
                            </group>
                        </group>
                        <group string="Report Header Image" invisible="use_custom_header == False">
                            <field name="report_header_image" widget="image" 
                                   options="{'preview_image': 'report_header_image', 'size': [1024, 1024]}"/>
                            <div class="text-muted">
                                <i class="fa fa-info-circle"/> Upload a JPG image for the report header. Recommended size: 1024x200 pixels.
                            </div>
                        </group>
                        <group string="Report Footer Image" invisible="use_custom_footer == False">
                            <field name="report_footer_image" widget="image" 
                                   options="{'preview_image': 'report_footer_image', 'size': [1024, 1024]}"/>
                            <div class="text-muted">
                                <i class="fa fa-info-circle"/> Upload a JPG image for the report footer. Recommended size: 1024x150 pixels.
                            </div>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

