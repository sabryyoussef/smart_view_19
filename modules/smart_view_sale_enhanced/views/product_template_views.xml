<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Product Template Form View - Enhanced -->
    <record id="product_template_form_view_enhanced" model="ir.ui.view">
        <field name="name">product.template.form.enhanced</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            
            <!-- REQ-00023 & REQ-00039: Add Quotation Description in Sales tab -->
            <xpath expr="//page[@name='sales']//group[@name='sale']" position="after">
                <group string="Quotation Information">
                    <field name="quotation_description" 
                           placeholder="Description to show in quotation templates..."/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>

