<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- REQ-00039: Technical Quotation Template (without prices) -->
    <template id="report_saleorder_document_technical">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            
            <div class="page">
                <div class="oe_structure"/>

                <!-- Header Section -->
                <h2 class="mt-4">
                    <span>Technical Quotation # </span>
                    <span t-field="doc.name"/>
                </h2>

                <div class="row mt-4 mb-4" id="informations">
                    <!-- REQ-00017: Show Quotation Create Date -->
                    <div t-if="doc.quotation_create_date" class="col-auto col-3 mw-100 mb-2">
                        <strong>Date:</strong>
                        <p class="m-0" t-field="doc.quotation_create_date"/>
                    </div>
                    <div t-if="doc.validity_date" class="col-auto col-3 mw-100 mb-2">
                        <strong>Valid Until:</strong>
                        <p class="m-0" t-field="doc.validity_date"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                        <strong>Prepared By:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                        <strong>Reference:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                </div>

                <!-- Technical Information Notice -->
                <div class="alert alert-info mt-3 mb-4">
                    <strong>Note:</strong> This is a technical quotation showing product specifications and quantities. 
                    For pricing information, please request a commercial quotation.
                </div>

                <!-- Order Lines Table (Technical View) -->
                <table class="table table-sm o_main_table mt-4">
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_description" class="text-left" style="width: 50%;">Product Description</th>
                            <!-- REQ-00021: Internal Reference Column -->
                            <th name="th_ref" class="text-left" style="width: 15%;">Reference</th>
                            <!-- REQ-00039: Quantity Column -->
                            <th name="th_quantity" class="text-right" style="width: 15%;">Quantity</th>
                            <th name="th_details" class="text-left" style="width: 20%;">Technical Details</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-foreach="doc.order_line" t-as="line">
                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_description">
                                        <!-- REQ-00022: Product Image Resized to 70% (30% reduction) -->
                                        <div t-if="line.product_id.image_128" style="margin-bottom: 10px;">
                                            <img t-att-src="image_data_uri(line.product_id.image_128)" 
                                                 style="max-width: 70px; max-height: 70px;"
                                                 alt="Product"/>
                                        </div>
                                        <!-- REQ-00019: Full Product Name -->
                                        <div>
                                            <strong t-field="line.product_id.name" style="white-space: normal;"/>
                                        </div>
                                        <!-- REQ-00039: Show Quotation Description if available -->
                                        <div t-if="line.product_id.quotation_description" class="text-muted mt-2" style="white-space: pre-wrap;">
                                            <span t-field="line.product_id.quotation_description"/>
                                        </div>
                                        <!-- Fallback to line description if no quotation description -->
                                        <div t-elif="line.name != line.product_id.name" class="text-muted mt-2" style="white-space: pre-wrap;">
                                            <span t-field="line.name"/>
                                        </div>
                                    </td>
                                    <!-- REQ-00021: Internal Reference -->
                                    <td name="td_ref">
                                        <span t-field="line.product_internal_ref"/>
                                    </td>
                                    <!-- REQ-00039: Quantity -->
                                    <td name="td_quantity" class="text-right">
                                        <strong>
                                            <span t-field="line.product_uom_qty"/>
                                            <span t-field="line.product_uom" groups="uom.group_uom"/>
                                        </strong>
                                    </td>
                                    <td name="td_details">
                                        <!-- Technical specifications if available -->
                                        <t t-if="line.product_id.default_code">
                                            <div><strong>Code:</strong> <span t-field="line.product_id.default_code"/></div>
                                        </t>
                                        <t t-if="line.product_id.barcode">
                                            <div><strong>Barcode:</strong> <span t-field="line.product_id.barcode"/></div>
                                        </t>
                                        <t t-if="line.product_id.weight">
                                            <div><strong>Weight:</strong> <span t-field="line.product_id.weight"/> kg</div>
                                        </t>
                                        <t t-if="line.product_id.volume">
                                            <div><strong>Volume:</strong> <span t-field="line.product_id.volume"/> mÂ³</div>
                                        </t>
                                    </td>
                                </t>
                                <t t-elif="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99" class="bg-light">
                                        <strong t-field="line.name"/>
                                    </td>
                                </t>
                                <t t-elif="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <em t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <!-- Summary Section (without prices) -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="alert alert-secondary">
                            <p class="mb-0">
                                <strong>Total Items:</strong> <span t-esc="len([l for l in doc.order_line if not l.display_type])"/> products
                            </p>
                            <p class="mb-0">
                                <strong>Total Quantity:</strong> <span t-esc="sum([l.product_uom_qty for l in doc.order_line if not l.display_type])"/> units
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Project/Installation Notes -->
                <div t-if="doc.note" class="mt-4">
                    <h5><strong>Technical Notes:</strong></h5>
                    <p t-field="doc.note" style="white-space: pre-wrap;"/>
                </div>

                <!-- Additional Information -->
                <div class="mt-4 text-muted">
                    <p><small>
                        This technical quotation is provided for specification purposes only. 
                        All technical details are subject to final confirmation. 
                        For commercial terms and pricing, please contact our sales department.
                    </small></p>
                </div>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>

</odoo>

