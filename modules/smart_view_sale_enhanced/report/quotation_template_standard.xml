<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- REQ-00023: Standard Quotation Template (with prices) -->
    <template id="report_saleorder_document_standard">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/>
            
            <div class="page">
                <div class="oe_structure"/>

                <!-- Header Section -->
                <h2 class="mt-4">
                    <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice # </span>
                    <span t-elif="doc.state in ['draft', 'sent']">Quotation # </span>
                    <span t-else="">Order # </span>
                    <span t-field="doc.name"/>
                </h2>

                <!-- REQ-00017: Show Quotation Create Date -->
                <div class="row mt-4 mb-4" id="informations">
                    <div t-if="doc.quotation_create_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2">
                        <strong>Quotation Date:</strong>
                        <p class="m-0" t-field="doc.quotation_create_date"/>
                    </div>
                    <div t-if="doc.date_order and doc.state not in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2">
                        <strong>Order Date:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                    </div>
                    <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2">
                        <strong>Expiration:</strong>
                        <p class="m-0" t-field="doc.validity_date"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                        <strong>Salesperson:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                        <strong>Your Reference:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                </div>

                <!-- Order Lines Table -->
                <table class="table table-sm o_main_table mt-4">
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_description" class="text-left">Description</th>
                            <!-- REQ-00021: Internal Reference Column -->
                            <th name="th_ref" class="text-left">Ref</th>
                            <th name="th_quantity" class="text-right">Quantity</th>
                            <th name="th_priceunit" class="text-right">Unit Price</th>
                            <!-- REQ-00024: Discount Column -->
                            <th name="th_discount" class="text-right">Disc.%</th>
                            <th name="th_taxes" class="text-right">Taxes</th>
                            <th name="th_subtotal" class="text-right">
                                <span>Amount</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-foreach="doc.order_line" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>

                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_description">
                                        <!-- REQ-00022: Product Image Resized to 70% (30% reduction) -->
                                        <span t-if="line.product_id.image_128">
                                            <img t-att-src="image_data_uri(line.product_id.image_128)" 
                                                 style="max-width: 70px; max-height: 70px; margin-right: 10px; vertical-align: middle;"
                                                 alt="Product"/>
                                        </span>
                                        <!-- REQ-00019: Full Product Name -->
                                        <span t-field="line.name" style="white-space: normal;"/>
                                    </td>
                                    <!-- REQ-00021: Internal Reference -->
                                    <td name="td_ref">
                                        <span t-field="line.product_internal_ref"/>
                                    </td>
                                    <td name="td_quantity" class="text-right">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom" groups="uom.group_uom"/>
                                    </td>
                                    <td name="td_priceunit" class="text-right">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <!-- REQ-00024: Discount Display -->
                                    <td name="td_discount" class="text-right">
                                        <span t-if="line.discount > 0" t-field="line.discount"/>
                                        <span t-if="line.discount == 0">-</span>
                                    </td>
                                    <td name="td_taxes" class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                    </td>
                                    <td name="td_subtotal" class="text-right o_price_total">
                                        <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </t>
                                <t t-elif="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                                <t t-elif="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <!-- Totals Section -->
                <div class="clearfix">
                    <div id="total" class="row">
                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                            <table class="table table-sm table-borderless">
                                <!-- Subtotal without discount -->
                                <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                <t t-call="account.document_tax_totals"/>

                                <!-- REQ-00025: Total Discount Display -->
                                <tr t-if="doc.total_discount > 0" class="border-black o_total">
                                    <td><strong>Total Discount:</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.total_discount" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        <span t-if="doc.total_discount_percent > 0">
                                            (<span t-esc="'%.1f' % doc.total_discount_percent"/>%)
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Terms and Conditions -->
                <div t-if="doc.note" class="mt-4">
                    <p><strong>Terms and Conditions:</strong></p>
                    <p t-field="doc.note"/>
                </div>

                <!-- Payment Terms -->
                <div t-if="doc.payment_term_id" class="mt-2">
                    <p><strong>Payment Terms:</strong> <span t-field="doc.payment_term_id.note"/></p>
                </div>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>

</odoo>

